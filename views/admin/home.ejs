<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Exchange Admin Dashboard</title>
    <link rel="stylesheet" href="/styles/admin/home.css">  
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <i class="fa-solid fa-recycle fa-lg"></i>
                <h2>Smart Exchange</h2>
            </div>
            
            <div class="nav-items">
                <div class="nav-item active">
                    <i class="fa-solid fa-house"></i>
                    <span>Dashboard</span>
                </div>
                <div class="nav-item">
                    <i class="fa-solid fa-box"></i>
                    <span>Products</span>
                </div>
                <div class="nav-item">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span>Orders</span>
                </div>
                <div class="nav-item">
                    <i class="fa-solid fa-users"></i>
                    <span>Customers</span>
                </div>
                <div class="nav-item">
                    <i class="fa-solid fa-tag"></i>
                    <span>Promotions</span>
                </div>
                <div class="nav-item">
                    <i class="fa-solid fa-chart-simple"></i>
                    <span>Analytics</span>
                </div>
                <div class="nav-item">
                    <i class="fa-solid fa-comment"></i>
                    <span>Reviews</span>
                </div>
                <div class="nav-item">
                    <i class="fa-solid fa-gear"></i>
                    <span><a href="/api/admin/logout" style="text-decoration: none;color: white;">Logout</a></span>
                </div>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <div class="search-bar">
                    <i class="fa-solid fa-search"></i>
                    <input type="text" placeholder="Search products, orders, customers...">
                </div>
                
                <div class="user-actions">
                    <div class="notification-bell">
                        <i class="fa-solid fa-bell"></i>
                        <div class="notification-badge">3</div>
                    </div>
                    <div class="avatar">
                        <span>JD</span>
                    </div>
                </div>
            </div>
            
            <div class="dashboard-grid">
                <div class="stats-card">
                    <div class="card-title">TOTAL SALES</div>
                    <div class="card-value">24,350</div>
                    <div class="card-indicator positive">
                        <i class="fa-solid fa-arrow-up"></i>
                        <span>12.5% from last month</span>
                    </div>
                </div>
                
                <div class="stats-card">
                    <div class="card-title">ACTIVE LISTINGS</div>
                    <div class="card-value">145</div>
                    <div class="card-indicator positive">
                        <i class="fa-solid fa-arrow-up"></i>
                        <span>8.3% from last month</span>
                    </div>
                </div>
                
                <div class="stats-card">
                    <div class="card-title">PENDING ORDERS</div>
                    <div class="card-value">28</div>
                    <div class="card-indicator negative">
                        <i class="fa-solid fa-arrow-up"></i>
                        <span>4.1% from last month</span>
                    </div>
                </div>
                
                <div class="stats-card">
                    <div class="card-title">CUSTOMER REVIEWS</div>
                    <div class="card-value">4.8 <span style="font-size: 1rem; color: var(--secondary);">/5</span></div>
                    <div class="card-indicator positive">
                        <i class="fa-solid fa-arrow-up"></i>
                        <span>0.3 from last month</span>
                    </div>
                </div>
            </div>
            
            <div class="section-title">Inventory Overview</div>
            <div class="products-table">
                <table>
                    <thead>
                        <tr>
                            <th>Product</th<th>Product</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="product-cell">
                                    <div class="product-img">
                                        <i class="fa-solid fa-laptop"></i>
                                    </div>
                                    <div>
                                        <div class="product-name">MacBook Pro 16"</div>
                                        <div class="product-category">Electronics</div>
                                    </div>
                                </div>
                            </td>
                            <td>Electronics</td>
                            <td>50,000</td>
                            <td>23</td>
                            <td><span class="status-badge status-in-stock">In Stock</span></td>
                            <td>
                                <div class="actions">
                                    <button class="btn btn-sm btn-outline"><i class="fa-solid fa-pen"></i></button>
                                    <button class="btn btn-sm btn-outline"><i class="fa-solid fa-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="product-cell">
                                    <div class="product-img">
                                        <i class="fa-solid fa-mobile-screen"></i>
                                    </div>
                                    <div>
                                        <div class="product-name">iPhone 15 Pro</div>
                                        <div class="product-category">Smartphones</div>
                                    </div>
                                </div>
                            </td>
                            <td>Smartphones</td>
                            <td>70,000</td>
                            <td>8</td>
                            <td><span class="status-badge status-low">Low Stock</span></td>
                            <td>
                                <div class="actions">
                                    <button class="btn btn-sm btn-outline"><i class="fa-solid fa-pen"></i></button>
                                    <button class="btn btn-sm btn-outline"><i class="fa-solid fa-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                        
                       
                        <tr>
                            <td>
                                <div class="product-cell">
                                    <div class="product-img">
                                        <i class="fa-solid fa-keyboard"></i>
                                    </div>
                                    <div>
                                        <div class="product-name">Logitech </div>
                                        <div class="product-category">Accessories</div>
                                    </div>
                                </div>
                            </td>
                            <td>Accessories</td>
                            <td>800</td>
                            <td>15</td>
                            <td><span class="status-badge status-in-stock">In Stock</span></td>
                            <td>
                                <div class="actions">
                                    <button class="btn btn-sm btn-outline"><i class="fa-solid fa-pen"></i></button>
                                    <button class="btn btn-sm btn-outline"><i class="fa-solid fa-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <div class="recent-section">
                <div>
                    <div class="section-title">Recent Listings</div>
                    <div class="products-table">
                        
                        <div class="listing-item">
                            <div class="listing-img">
                                <i class="fa-solid fa-camera"></i>
                            </div>
                            <div class="listing-info">
                                <div class="listing-name">Samsung S22 ultra</div>
                                <div class="listing-meta">Listed by: Sarah M. · 5 hours ago</div>
                            </div>
                            <div class="listing-price">30,000</div>
                        </div>
                        <div class="listing-item">
                            <div class="listing-img">
                                <i class="fa-solid fa-tv"></i>
                            </div>
                            <div class="listing-info">
                                <div class="listing-name">Hp victus</div>
                                <div class="listing-meta">Listed by: Michael T. · 8 hours ago</div>
                            </div>
                            <div class="listing-price">50,000</div>
                        </div>
                        <div class="listing-item">
                            <div class="listing-img">
                                <i class="fa-solid fa-clock"></i>
                            </div>
                            <div class="listing-info">
                                <div class="listing-name">Apple Watch Series 8</div>
                                <div class="listing-meta">Listed by: Emma K. · 1 day ago</div>
                            </div>
                            <div class="listing-price">10,000</div>
                        </div>
                    </div>
                </div>
                
                <div>
                    <div class="section-title">Top Sellers</div>
                    <div class="products-table">
                        <div class="listing-item">
                            <div class="listing-img">
                                <i class="fa-solid fa-user"></i>
                            </div>
                            <div class="listing-info">
                                <div class="listing-name">Robert Johnson</div>
                                <div class="listing-meta">23 products · 4.9 rating</div>
                            </div>
                        </div>
                        <div class="listing-item">
                            <div class="listing-img">
                                <i class="fa-solid fa-user"></i>
                            </div>
                            <div class="listing-info">
                                <div class="listing-name">Lisa Williams</div>
                                <div class="listing-meta">18 products · 4.8 rating</div>
                            </div>
                        </div>
                        <div class="listing-item">
                            <div class="listing-img">
                                <i class="fa-solid fa-user"></i>
                            </div>
                            <div class="listing-info">
                                <div class="listing-name">David Miller</div>
                                <div class="listing-meta">15 products · 4.7 rating</div>
                            </div>
                        </div>
                        <div class="listing-item">
                            <div class="listing-img">
                                <i class="fa-solid fa-user"></i>
                            </div>
                            <div class="listing-info">
                                <div class="listing-name">Anna Garcia</div>
                                <div class="listing-meta">12 products · 4.7 rating</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/scripts/admin/admin-home.js"></script>
</body>
</html>
