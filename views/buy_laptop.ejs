<script>
      async function fetchAndRenderLatestLaptops() {
        try {
            const response = await fetch('/api/latest-laptops');
            if (!response.ok) throw new Error('Failed to fetch latest laptops');
            const laptops = await response.json();
   console.log(laptops);
            const grid = document.getElementById('latest-laptops-container');
            grid.innerHTML = ''; // Clear existing content

            if (laptops.length === 0) {
                grid.innerHTML = '<p>No new laptops available.</p>';
                return;
            }

            laptops.forEach(laptop => {
                const finalPrice = calculateFinalPrice(laptop);
                const originalPrice = laptop.base_price;
                console.log(originalPrice);
                const card = document.createElement('div');
                card.className = 'laptop-card';
                card.innerHTML = `
                    <a href="/laptop/${laptop.id}" style="text-decoration: none; color: #000;">
                        <img src="${laptop.image}" alt="${laptop.brand} ${laptop.series}">
                        <p class="best_in_value_phone_name">${laptop.brand} ${laptop.series}</p>
                        <p class="price">₹${finalPrice.toLocaleString('en-IN')} <span class="old-price">₹${originalPrice.toLocaleString('en-IN')}</span></p>
                        <p class="discount">${laptop.discount}% off</p>
                        <p>Grade: ${laptop.condition}</p>
                        <p>FREE 6 Months Warranty</p>
                    </a>
                `;
                grid.appendChild(card);
            });
        } catch (error) {
            console.error('Error fetching latest laptops:', error);
            const grid = document.getElementById('latest-laptops-container');
            grid.innerHTML = '<p>Error loading laptops. Please try again later.</p>';
        }
    }
    function calculateFinalPrice(product) {
      const price = parseFloat(product.base_price || 0); // Updated field
      const discount = parseFloat(product.discount || 0);
      const finalPrice = Number((price - (price * discount / 100)).toFixed(2));
      return finalPrice;
    }

    fetchAndRenderLatestLaptops();
    setInterval(fetchAndRenderLatestLaptops, 30000);

    function redirectToFilterPage(brand) {
        window.location.href = `/filter-buy-laptop?brand=${brand}`;
    }

    function redirectToFilterPageWithPrice(card) {
        const maxPrice = card.getAttribute("value");
        window.location.href = `/filter-buy-laptop?maxPrice=${maxPrice}`;
    }
</script>
