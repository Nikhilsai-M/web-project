<!-- views/mouse-details.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= mouse.title %> | Your Store</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/product-details.css">
</head>
<body>
    <%- include('partials/header') %> 
    <div class="container">
        <div class="product-details-container">
            <div class="product-image">
                <img src="/<%= mouse.image %>" alt="<%= mouse.brand %> <%= mouse.title %>">
            </div>
            <div class="product-info">
                <h1 class="product-title"><%= mouse.brand %> <%= mouse.title %></h1>
                
                <div class="product-price-container">
                    <span class="discounted-price">₹<%= (parseFloat(mouse.pricing.originalPrice) - (parseFloat(mouse.pricing.originalPrice) * parseFloat(mouse.pricing.discount) / 100)).toLocaleString('en-IN') %></span>
                    <span class="original-price">₹<%= mouse.pricing.originalPrice.toLocaleString('en-IN') %></span>
                    <span class="discount"><%= mouse.pricing.discount %> Off</span>
                </div>
                
                <div class="product-actions">
                    <button id="add-to-cart" class="btn btn-primary" data-id="<%= mouse.id %>">
                        <i class="fas fa-shopping-cart"></i> Add to Cart
                    </button>
                    <button id="buy-now" class="btn btn-success" data-id="<%= mouse.id %>">
                        <i class="fas fa-bolt"></i> Buy Now
                    </button>
                </div>
                <div class="product-specifications">
                    <h3>Key Specifications</h3>
                    <ul>
                        <li><i class="fas fa-wifi"></i> <strong>Connectivity:</strong> <%= mouse.connectivity %></li>
                        <li><i class="fas fa-crosshairs"></i> <strong>Resolution:</strong> <%= mouse.resolution %> DPI</li>
                        <li><i class="fas fa-mouse"></i> <strong>Type:</strong> <%= mouse.type %></li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="product-description">
            <h2>Product Description</h2>
            <p>Enhance your productivity and gaming experience with the <%= mouse.brand %> <%= mouse.title %>. This <%= mouse.condition %> condition mouse features <%= mouse.connectivity %> connectivity, <%= mouse.resolution %> DPI resolution, and a <%= mouse.type %> design for optimal performance.</p>
            
            <div class="highlight-features">
                <h3>Highlight Features</h3>
                <div class="features-grid">
                    <div class="feature">
                        <i class="fas fa-wifi"></i>
                        <h4>Seamless Connectivity</h4>
                        <p><%= mouse.connectivity %> for reliable and fast connection</p>
                    </div>
                    <div class="feature">
                        <i class="fas fa-crosshairs"></i>
                        <h4>High Resolution</h4>
                        <p><%= mouse.resolution %> DPI for precise tracking</p>
                    </div>
                    <div class="feature">
                        <i class="fas fa-mouse"></i>
                        <h4>Ergonomic Design</h4>
                        <p><%= mouse.type %> for comfortable and efficient use</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/scripts/mouse-details.js"></script>
</body>
<footer><%- include('partials/footer') %> </footer>
</html>