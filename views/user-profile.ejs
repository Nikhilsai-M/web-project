<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile | Your eCommerce Store</title>
    <link rel="stylesheet" href="/styles/user-profile.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="profile-container">
        <h1>My Profile</h1>
        
        <div class="profile-grid">
            <!-- Profile Sidebar -->
            <div class="profile-sidebar">
                <div class="profile-card">
                    <div class="profile-header">
                        <div class="profile-avatar">
                            <img src="/images/profile-icon.jpg" alt="Profile Avatar">
                        </div>
                        <h2 class="profile-name" id="profileName"><%= user.firstName %> <%= user.lastName %></h2>
                        <p class="profile-email" id="profileEmail"><%= user.email %></p>
                    </div>
                    
                    <div class="profile-stats">
                        <div class="stat-item">
                            <span class="stat-value" id="ordersCount"><%= ordersCount %></span>
                            <span class="stat-label">Orders</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value" id="itemsSoldCount"><%= itemsSoldCount %></span>
                            <span class="stat-label">Items Sold</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Profile Content -->
            <div class="profile-content">
                <!-- Personal Information -->
                <div class="profile-section">
                    <div class="section-header">
                        <h3>Personal Information</h3>
                        <button class="btn-link" id="editPersonalInfoBtn">Edit</button>
                    </div>
                    
                    <div class="info-grid" id="personalInfoDisplay">
                        <div class="info-item">
                            <label>Full Name</label>
                            <p id="fullName"><%= user.firstName %> <%= user.lastName %></p>
                        </div>
                        <div class="info-item">
                            <label>Email</label>
                            <p id="email"><%= user.email %></p>
                        </div>
                        <div class="info-item">
                            <label>Phone</label>
                            <p id="phone"><%= user.phone %></p>
                        </div>
                    </div>

                    <!-- Edit Form (hidden by default) -->
                    <form id="personalInfoForm" class="info-grid" style="display: none;">
                        <div class="info-item">
                            <label>First Name</label>
                            <input type="text" id="editFirstName" value="<%= user.firstName %>" required>
                        </div>
                        <div class="info-item">
                            <label>Last Name</label>
                            <input type="text" id="editLastName" value="<%= user.lastName %>" required>
                        </div>
                        <div class="info-item">
                            <label>Email</label>
                            <input type="email" id="editEmail" value="<%= user.email %>" required>
                        </div>
                        <div class="info-item">
                            <label>Phone</label>
                            <input type="text" id="editPhone" value="<%= user.phone %>" required>
                        </div>
                        <div class="info-item">
                            <button type="submit" class="btn-primary">Save</button>
                            <button type="button" class="btn-secondary" id="cancelEditPersonalInfo">Cancel</button>
                        </div>
                    </form>
                </div>
                
                <!-- Account Security -->
                <div class="profile-section">
                    <div class="section-header">
                        <h3>Account Security</h3>
                    </div>
                    
                    <div class="security-options">
                        <div class="security-item">
                            <div class="security-info">
                                <h4>Password</h4>
                                <p>Last changed: <span id="passwordLastChanged">N/A</span></p>
                            </div>
                            <button class="btn-primary" id="changePasswordBtn">Change Password</button>
                        </div>
                    </div>

                    <!-- Change Password Form (hidden by default) -->
                    <form id="changePasswordForm" style="display: none;">
                        <div class="info-item">
                            <label>Current Password</label>
                            <input type="password" id="currentPassword" required>
                        </div>
                        <div class="info-item">
                            <label>New Password</label>
                            <input type="password" id="newPassword" required>
                        </div>
                        <div class="info-item">
                            <button type="submit" class="btn-primary">Save</button>
                            <button type="button" class="btn-secondary" id="cancelChangePassword">Cancel</button>
                        </div>
                    </form>
                </div>

                <!-- Statistics Section -->
                <div class="profile-section">
                    <div class="section-header">
                        <h3>Statistics</h3>
                    </div>
                    <div class="stats-container">
                        <canvas id="ordersPieChart" width="300" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <%- include('partials/footer') %>
    </footer>

    <script src="/scripts/user-profile.js"></script>
</body>
</html>