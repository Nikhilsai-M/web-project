<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile | Your eCommerce Store</title>
    <link rel="stylesheet" href="/styles/user-profile.css">
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="profile-container">
        <h1>My Profile</h1>
        
        <div class="profile-grid">
            <!-- Profile Sidebar -->
            <div class="profile-sidebar">
                <div class="profile-card">
                    <div class="profile-header">
                        <div class="profile-avatar">
                            <img src="/images/profile-icon.jpg" alt="Profile Avatar">
                        </div>
                        <h2 class="profile-name">Testing</h2>
                        <p class="profile-email">test123@gmail.com</p>
                    </div>
                    
                    <div class="profile-stats">
                        <div class="stat-item">
                            <span class="stat-value">12</span>
                            <span class="stat-label">Orders</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">5</span>
                            <span class="stat-label">Items Sold</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">3</span>
                            <span class="stat-label">Reviews</span>
                        </div>
                    </div>
                    
                    <div class="profile-actions">
                        <button class="btn-primary">Edit Profile</button>
                    </div>
                </div>
                
                <div class="profile-links-card">
                    <h3>Quick Links</h3>
                    <ul class="profile-links">
                        <li><a href="/orders" class="profile-link">My Orders</a></li>
                        <li><a href="/cart" class="profile-link">My Cart</a></li>
                    </ul>
                </div>
            </div>
            
            <!-- Profile Content -->
            <div class="profile-content">
                <!-- Personal Information -->
                <div class="profile-section">
                    <div class="section-header">
                        <h3>Personal Information</h3>
                        <button class="btn-link">Edit</button>
                    </div>
                    
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Full Name</label>
                            <p>John Doe</p>
                        </div>
                        <div class="info-item">
                            <label>Email</label>
                            <p>johndoe@example.com</p>
                        </div>
                        <div class="info-item">
                            <label>Phone</label>
                            <p>+1 (555) 123-4567</p>
                        </div>
                        <div class="info-item">
                            <label>Date of Birth</label>
                            <p>15 January 1990</p>
                        </div>
                    </div>
                </div>
                
                <!-- Address Information -->
                <div class="profile-section">
                    <div class="section-header">
                        <h3>Default Address</h3>
                        <button class="btn-link">Edit</button>
                    </div>
                    
                    <div class="address-card">
                        <h4>Home</h4>
                        <p>123 Main Street, Apt 4B</p>
                        <p>New York, NY 10001</p>
                        <p>United States</p>
                        <div class="address-actions">
                            <button class="btn-text">Set as Default</button>
                            <button class="btn-text">Delete</button>
                        </div>
                    </div>
                    
                    <button class="btn-secondary add-address-btn">
                        <img src="/images/profile/plus-icon.png" alt="Add">
                        Add New Address
                    </button>
                </div>
                
                
                <!-- Account Security -->
                <div class="profile-section">
                    <div class="section-header">
                        <h3>Account Security</h3>
                    </div>
                    
                    <div class="security-options">
                        <div class="security-item">
                            <div class="security-info">
                                <h4>Password</h4>
                                <p>Last changed: January 15, 2025</p>
                            </div>
                            <button class="btn-primary">Change Password</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <%- include('partials/footer') %>
    </footer>

    <script src="profile.js"></script>
</body>
</html>