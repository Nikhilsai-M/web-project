<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile | Your eCommerce Store</title>
    <link rel="stylesheet" href="/styles/user-profile.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* Error message styling - add this to your CSS file or keep here */
        .error-message {
            display: none;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            color: #dc3545;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="profile-container">
        <h1>My Profile</h1>
        
        <div class="profile-grid">
            <!-- Profile Sidebar -->
            <div class="profile-sidebar">
                <div class="profile-card">
                    <div class="profile-header">
                        <div class="profile-avatar">
                            <img src="/images/profile-icon.jpg" alt="Profile Avatar" width="80" height="80">
                        </div>
                        <h2 class="profile-name" id="profileName"><%= user.firstName %> <%= user.lastName %></h2>
                        <p class="profile-email" id="profileEmail"><%= user.email %></p>
                    </div>
                    
                    <div class="profile-stats">
                        <div class="stat-item">
                            <span class="stat-value" id="ordersCount"><%= ordersCount %></span>
                            <span class="stat-label">Orders</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value" id="itemsSoldCount"><%= itemsSoldCount %></span>
                            <span class="stat-label">Items Sold</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Profile Content -->
            <div class="profile-content">
                <!-- Personal Information -->
                <div class="profile-section">
                    <div class="section-header">
                        <h3>Personal Information</h3>
                        <button class="btn-link" id="editPersonalInfoBtn" aria-label="Edit personal information">Edit</button>
                    </div>
                    <div class="info-grid" id="personalInfoDisplay">
                        <div class="info-item">
                            <div class="info-label" style="font-weight: bold;">Full Name</div>
                            <p id="fullName"><%= user.firstName %> <%= user.lastName %></p>
                        </div>
                        <div class="info-item">
                            <div class="info-label" style="font-weight: bold;">Email</div>
                            <p id="email"><%= user.email %></p>
                        </div>
                        <div class="info-item">
                            <div class="info-label" style="font-weight: bold;">Phone</div>
                            <p id="phone"><%= user.phone || 'Not provided' %></p>
                        </div>
                        <div class="info-item">
                            <div class="info-label" style="font-weight: bold;">Address :</div>
                            <div id="addressDisplay">
                                <% if (user.address && (user.address.street || user.address.city || user.address.state || user.address.postal_code || user.address.country)) { %>
                                    <ul class="address-list">
                                        <% if (user.address.street) { %><li><%= user.address.street %></li><% } %>
                                        <% if (user.address.city) { %><li><%= user.address.city %></li><% } %>
                                        <% if (user.address.state || user.address.postal_code) { %>
                                            <li><%= [user.address.state, user.address.postal_code].filter(Boolean).join(' ') %></li>
                                        <% } %>
                                        <% if (user.address.country) { %><li><%= user.address.country %></li><% } %>
                                    </ul>
                                <% } else { %>
                                    <p class="no-address">Not provided</p>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Form (hidden by default) -->
                    <form id="personalInfoForm" class="info-grid" style="display: none;">
                        <div class="info-item">
                            <label for="editFirstName">First Name *</label>
                            <input type="text" id="editFirstName" value="<%= user.firstName || '' %>" required>
                            <span id="firstNameError" class="error-message"></span>
                        </div>
                        <div class="info-item">
                            <label for="editLastName">Last Name *</label>
                            <input type="text" id="editLastName" value="<%= user.lastName || '' %>" required>
                            <span id="lastNameError" class="error-message"></span>
                        </div>
                        <div class="info-item">
                            <label for="editEmail">Email *</label>
                            <input type="email" id="editEmail" value="<%= user.email || '' %>" required>
                            <span id="emailError" class="error-message"></span>
                        </div>
                        <div class="info-item">
                            <label for="editPhone">Phone</label>
                            <input type="tel" id="editPhone" value="<%= user.phone || '' %>" pattern="[0-9\-\+\s\(\)]{10,15}">
                            <span id="phoneError" class="error-message"></span>
                        </div>
                        <div class="info-item">
                            <label for="editStreet">Street Address</label>
                            <input type="text" id="editStreet" value="<%= user.address?.street || '' %>">
                            <span id="streetError" class="error-message"></span>
                        </div>
                        <div class="info-item">
                            <label for="editCity">City</label>
                            <input type="text" id="editCity" value="<%= user.address?.city || '' %>">
                            <span id="cityError" class="error-message"></span>
                        </div>
                        <div class="info-item">
                            <label for="editState">State/Province</label>
                            <input type="text" id="editState" value="<%= user.address?.state || '' %>">
                            <span id="stateError" class="error-message"></span>
                        </div>
                        <div class="info-item">
                            <label for="editPostalCode">Postal Code</label>
                            <input type="text" id="editPostalCode" value="<%= user.address?.postal_code || '' %>">
                            <span id="postalCodeError" class="error-message"></span>
                        </div>
                        <div class="info-item">
                            <label for="editCountry">Country</label>
                            <input type="text" id="editCountry" value="<%= user.address?.country || '' %>">
                            <span id="countryError" class="error-message"></span>
                        </div>
                        <div class="info-item">
                            <button type="submit" class="btn-primary">Save Changes</button>
                            <button type="button" class="btn-secondary" id="cancelEditPersonalInfo">Cancel</button>
                        </div>
                    </form>
                </div>
                
                <!-- Account Security -->
                <div class="profile-section">
                    <div class="section-header">
                        <h3>Account Security</h3>
                    </div>
                    
                    <div class="security-options">
                        <div class="security-item">
                            <div class="security-info">
                                <h4>Password</h4>
                                <p>Last changed: <span id="passwordLastChanged">
                                    <%= user.passwordLastChanged ? new Date(user.passwordLastChanged).toLocaleDateString() : 'N/A' %>
                                </span></p>
                            </div>
                            <button class="btn-primary" id="changePasswordBtn" aria-label="Change password">Change Password</button>
                        </div>
                    </div>

                    <!-- Change Password Form (hidden by default) -->
                    <form id="changePasswordForm" style="display: none;">
                        <div class="info-item">
                            <label for="currentPassword">Current Password *</label>
                            <input type="password" id="currentPassword" required aria-describedby="currentPasswordHelp">
                            <span id="currentPasswordError" class="error-message"></span>
                            <small id="currentPasswordHelp">Enter your current password</small>
                        </div>
                        <div class="info-item">
                            <label for="newPassword">New Password *</label>
                            <input type="password" id="newPassword" required 
                                  aria-describedby="passwordRequirements"
                                  pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{8,}$">
                            <span id="newPasswordError" class="error-message"></span>
                            <small id="passwordRequirements">Minimum 8 characters with at least 1 uppercase, 1 lowercase, 1 number</small>
                        </div>
                        <div class="info-item">
                            <button type="submit" class="btn-primary">Update Password</button>
                            <button type="button" class="btn-secondary" id="cancelChangePassword">Cancel</button>
                        </div>
                    </form>
                </div>

                <!-- Statistics Section -->
                <div class="profile-section">
                    <div class="section-header">
                        <h3>Statistics</h3>
                    </div>
                    <div class="stats-container" role="img" aria-label="Order statistics chart">
                        <canvas id="ordersPieChart" width="300" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>

    <script src="/scripts/user-profile.js"></script>
</body>
</html>